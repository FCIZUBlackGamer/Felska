<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/NavigationDrawerColor"
            android:orientation="vertical">

            <Button
                android:id="@+id/time_back"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@color/NavigationDrawerColor"
                android:drawableLeft="@drawable/ic_chevron_left_black_24dp"
                android:gravity="top|left"
                android:paddingTop="10dp"
                android:text="Back"
                android:textAllCaps="false"
                android:textColor="@color/white"
                tools:ignore="RtlHardcoded" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/NavigationDrawerColor"
                    android:drawableTop="@drawable/ic_drive_eta_black_24dp"
                    android:text="Trip Type"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/NavigationDrawerColor"
                    android:drawableTop="@drawable/ic_location_on_black_24dp"
                    android:text="From - To"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/NavigationDrawerColor"
                    android:drawableTop="@drawable/ic_access_time_white_24dp"
                    android:text="Time"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/NavigationDrawerColor"
                    android:drawableTop="@drawable/ic_details_black_24dp"
                    android:text="Details"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/NavigationDrawerColor"
                    android:drawableTop="@drawable/ic_payment_black_24dp"
                    android:text="Payment"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="20dp"
            android:paddingTop="40dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Start date" />

            <EditText
                android:id="@+id/time_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_date_range_black_24dp"
                android:paddingRight="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="20dp"
            android:paddingTop="40dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select End date" />

            <EditText
                android:id="@+id/time_end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_date_range_black_24dp"
                android:paddingRight="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/gray"
            android:layout_marginTop="140dp">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/NavigationDrawerColor"
                android:layout_margin="20dp"
                android:text="Next"
                android:id="@+id/time_next"
                android:textColor="@color/white"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>